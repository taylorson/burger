<div class="fluid-container">
<div class="jumbotron text-center"><h1>burgs!</h1></div>
<div class="row">
<div class="col-md-5">
<h2 class="text-center">Burgs available to eat!</h2>

<ul>
  {{#each burgs}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="burgs/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EAT TIME!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-5">
<h2 class="text-center">Burgs that have been devoured!</h2>

<ul>
  {{#each burgs}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="burgs/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="col-md-2">
<h2 class="text-center">Add a burg</h2>
<form class="create-update-form" action="burgs/create" method="POST">

  <div class="form-group">
    <label for="ca">burg Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burg</button>
</form>
</div>
</div>
</div>