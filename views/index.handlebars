<div class="fluid-container">
<div class="jumbotron text-center"><h1>Burgers!!</h1></div>
<div class="row">
<div class="col-md-5">
<h2 class="text-center">Burgers available to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">EAT TIME!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-5">
<h2 class="text-center">Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="col-md-2">
<h2 class="text-center">Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>
</div>
</div>
</div>
